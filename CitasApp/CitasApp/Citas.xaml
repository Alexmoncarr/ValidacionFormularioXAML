<Window x:Class="CitasApp.Citas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CitasApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Citas">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <DataGrid x:Name="mi_datagrid" ItemsSource="{Binding Path=listacitas}" HorizontalAlignment="Left" Height="224" Margin="198,38,0,0" VerticalAlignment="Top" Width="380"/>

        <Button Content="Nueva Cita" HorizontalAlignment="Left" Margin="136,314,0,0" VerticalAlignment="Top" Height="44" Width="113" Click="CitaNueva"/>
        <Button Content="Editar Cita" HorizontalAlignment="Left" Margin="332,314,0,0" VerticalAlignment="Top" Height="44" Width="113" Click="EditarCita"/>
        <Button Content="Eliminar Cita" HorizontalAlignment="Left" Margin="527,314,0,0" VerticalAlignment="Top" Height="44" Width="113" Click="EliminarCita"/>

    </Grid>
</Window>
